<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andylai.nuxlauncher">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".demo.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AppListActivity" />
        <activity android:name=".demo.LauncherListDemoActivity" />
        <activity
            android:name=".demo.CoverFlowDemoActivity"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen" />
        <activity
            android:name=".demo.SwippingPieMenuDemoActivity"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen" />
        <activity
            android:name=".demo.SwippingViewPagerDemoActivity"
            android:label="@string/title_activity_swipping_view_pager_demo"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>